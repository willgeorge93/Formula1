# F1 Predictor Configuration
# Copy this file to .env and customize as needed

# Application settings
F1_DEBUG=false
F1_LOG_LEVEL=INFO

# Ergast API settings
F1_ERGAST__BASE_URL=https://ergast.com/api/f1
F1_ERGAST__RATE_LIMIT=0.25
F1_ERGAST__TIMEOUT=30
F1_ERGAST__RETRIES=3

# Scraping settings
F1_SCRAPING__WIKIPEDIA_ENABLED=true
F1_SCRAPING__F1FANSITE_ENABLED=true

# Model settings
F1_MODEL__TEST_SEASON=2020
F1_MODEL__TRAIN_SEASONS_START=2014

# Storage settings
F1_STORAGE__BACKEND=sqlite
F1_STORAGE__DATA_DIR=data
F1_STORAGE__CACHE_ENABLED=true
